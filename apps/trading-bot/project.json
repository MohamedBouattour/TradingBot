{
  "name": "trading-bot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/trading-bot/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/bot.js"
      }
    },
    "build:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/bot.js --watch"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node ./apps/trading-bot/src/app.ts"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/trading-bot/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:app", "scope:trading-bot"]
}


{
  "name": "bot-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bot-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node build-api.js"
      },
      "outputs": ["{options.outputPath}"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node ./apps/bot-api/src/main.ts"
      }
    },
    "start:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --watch ./apps/bot-api/src/main.ts"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/bot-api/test/jest-e2e.json",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:app", "scope:api"]
}


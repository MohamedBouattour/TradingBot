{
  "name": "bot",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "ng": "ng",
    "test": "npx jest --coverage",
    "build:all": "npm run build:bot && npm run build:api && npm run build:ui",
    "serve:all": "concurrently \"npm run serve:api\" \"npm run serve:bot\" \"npm run serve:ui\"",
    "build:bot": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/bot.js",
    "build:bot:watch": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/bot.js --watch",
    "build:bot:prod": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/bot.js --minify --tree-shaking",
    "serve:bot": "ts-node ./apps/trading-bot/src/app.ts",
    "start:bot": "ts-node ./apps/trading-bot/src/app.ts",
    "start:bot:backtest": "ts-node ./apps/trading-bot/src/backtest.ts",
    "test:bot": "cross-env NODE_OPTIONS=--max-old-space-size=4096 npx jest --coverage apps/trading-bot --testPathIgnorePatterns=log.service.spec.ts && npm run test:bot:log",
    "test:bot:log": "cross-env NODE_OPTIONS=--max-old-space-size=6144 npx jest --coverage apps/trading-bot/__tests__/log.service.spec.ts --maxWorkers=1",
    "test:bot:all": "npm run test:bot && npm run test:bot:log",
    "build:api": "node build-api.js",
    "build:api:watch": "nodemon --watch apps/bot-api/src --ext ts --exec \"npm run build:api\"",
    "serve:api": "ts-node ./apps/bot-api/src/main.ts",
    "serve:api:dev": "nodemon --watch apps/bot-api/src --ext ts --exec ts-node ./apps/bot-api/src/main.ts",
    "start:api": "ts-node ./apps/bot-api/src/main.ts",
    "start:api:dev": "nodemon --watch apps/bot-api/src --ext ts --exec ts-node ./apps/bot-api/src/main.ts",
    "test:api": "npx jest apps/bot-api",
    "build:ui": "ng build ui",
    "build:ui:prod": "ng build ui --configuration production",
    "build:ui:watch": "ng build ui --watch --configuration development",
    "serve:ui": "ng serve ui",
    "serve:ui:prod": "ng serve ui --configuration production",
    "start:ui": "ng serve ui",
    "test:ui": "ng test ui",
    "deploy:bot": "powershell -ExecutionPolicy Bypass -File deploy/deploy-bot.ps1",
    "deploy:all": "powershell -ExecutionPolicy Bypass -File deploy/deploy-full-system.ps1"
  },
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@ixjb94/indicators": "^1.2.4",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.1.6",
    "@nestjs/microservices": "^11.0.20",
    "@nestjs/platform-express": "^11.0.20",
    "@nestjs/platform-socket.io": "^11.0.20",
    "@nestjs/testing": "^11.0.20",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.20",
    "@types/chart.js": "^2.9.41",
    "chart.js": "^4.5.0",
    "dotenv": "^16.5.0",
    "mysql2": "^3.11.4",
    "ng2-charts": "^8.0.0",
    "node-binance-api": "^1.0.3",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "supertrend": "^1.0.1",
    "tslib": "^2.3.0",
    "typeorm": "^0.3.25",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.8",
    "@angular/cli": "^19.2.8",
    "@angular/compiler-cli": "^19.2.0",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.6.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run test"
    ]
  }
}

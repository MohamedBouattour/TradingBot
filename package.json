{
  "name": "bot",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/app.js",
    "build:watch": "esbuild ./apps/trading-bot/src/app.ts --bundle --platform=node --outfile=dist/app.js --watch",
    "start": "ts-node ./apps/trading-bot/src/app.ts",
    "start-log": "ts-node ./apps/log-streaming/src/main.ts",
    "dev": "npm run build:watch & npm run serve",
    "test": "npx jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.20",
    "@nestjs/core": "^11.0.20",
    "@nestjs/platform-express": "^11.0.20",
    "@nestjs/platform-socket.io": "^11.0.20",
    "@nestjs/testing": "^11.0.20",
    "@nestjs/websockets": "^11.0.20",
    "dotenv": "^16.4.7",
    "node-binance-api": "^1.0.1",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "supertrend": "^1.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run test"
    ]
  }
}
